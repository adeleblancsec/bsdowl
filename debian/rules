#!/usr/bin/make -f
MAKETOOL=bmake -r DESTDIR=$$(pwd)/debian/bsdowl

%:
	dh $@

override_dh_auto_configure:
	autoconf
	dh_auto_configure

override_dh_auto_build:
	${MAKETOOL} build

override_dh_auto_install:
	${MAKETOOL} install
	dh_installman

override_dh_auto_clean: override_dh_auto_configure
	${MAKETOOL} distclean

override_dh_auto_test:
	: Do nada
